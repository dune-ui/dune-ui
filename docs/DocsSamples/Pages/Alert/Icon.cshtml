@page
@model DocsSamples.Pages.Alert.Icon

<sui-stack>
    <!-- code begin -->
    <!-- Using shorthand syntax -->
    <sui-alert icon="circle-check" title="All purchases restored"
               description="We have found and restored 9 of your purchases"/>
    
    <!-- Using composition syntax -->
    <sui-alert variant="AlertVariant.Error">
        <sui-icon name="triangle-alert"/>
        <sui-alert-title>No purchases found</sui-alert-title>
        <sui-alert-description>We were unable to find any previous purchases</sui-alert-description>
    </sui-alert>
    <!-- code end -->
</sui-stack>