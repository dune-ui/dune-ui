@{
    Layout = "_Layout";
}

<sui-sidebar-wrapper>
    <sui-sidebar variant="Inset">
        <sui-sidebar-content>
            @{
                List<DemoGroup> demoGroups =
                [
                    new DemoGroup("Alert",
                    [
                        new DemoItem("Intro", "/Alert/Intro"),
                        new DemoItem("Variants", "/Alert/Variants"),
                        new DemoItem("Icon", "/Alert/Icon"),
                        new DemoItem("Custom CSS", "/Alert/CustomCss"),
                        new DemoItem("Actions", "/Alert/Actions"),
                    ]),
                    new DemoGroup("Badge",
                    [
                        new DemoItem("Intro", "/Badge/Intro"),
                        new DemoItem("Variants", "/Badge/Variants"),
                        new DemoItem("Custom CSS", "/Badge/CustomCss"),
                    ]),
                    new DemoGroup("Button",
                    [
                        new DemoItem("Intro", "/Button/Intro"),
                        new DemoItem("Variants", "/Button/Variants"),
                        new DemoItem("Sizes", "/Button/Sizes"),
                        new DemoItem("Icon", "/Button/Icon"),
                        new DemoItem("Spinner", "/Button/Spinner"),
                        new DemoItem("Additional Attributes", "/Button/AdditionalAttributes"),
                    ]),
                    new DemoGroup("Breadcrumb",
                    [
                        new DemoItem("Intro", "/Breadcrumb/Intro"),
                        new DemoItem("Custom Separator", "/Breadcrumb/CustomSeparator"),
                        new DemoItem("Collapsed", "/Breadcrumb/Collapsed"),
                        new DemoItem("Icons", "/Breadcrumb/Icons"),
                        new DemoItem("Custom CSS", "/Breadcrumb/CustomCss"),
                    ]),
                    new DemoGroup("LinkButton",
                    [
                        new DemoItem("Intro", "/LinkButton/Intro"),
                        new DemoItem("Variants", "/LinkButton/Variants"),
                        new DemoItem("Sizes", "/LinkButton/Sizes"),
                        new DemoItem("Icon", "/LinkButton/Icon"),
                        new DemoItem("Additional Attributes", "/LinkButton/AdditionalAttributes"),
                        new DemoItem("URL", "/LinkButton/Url"),
                    ])
                ];
            }
            @foreach (var demoGroup in demoGroups)
            {
                <sui-sidebar-group>
                    <sui-sidebar-group-label>@demoGroup.Title</sui-sidebar-group-label>
                    <sui-sidebar-group-content>
                        <sui-sidebar-menu>
                            @foreach (var demoItem in demoGroup.Items)
                            {
                                <sui-sidebar-menu-item>
                                    <sui-sidebar-menu-link asp-page="@demoItem.Page">
                                        @demoItem.Title
                                    </sui-sidebar-menu-link>
                                </sui-sidebar-menu-item>
                            }
                        </sui-sidebar-menu>
                    </sui-sidebar-group-content>
                </sui-sidebar-group>
            }
        </sui-sidebar-content>
        @*<sui-sidebar-footer>Footer</sui-sidebar-footer>*@
    </sui-sidebar>
    <sui-sidebar-inset>
        <sui-container class="py-8">
            @RenderBody()
        </sui-container>
    </sui-sidebar-inset>
</sui-sidebar-wrapper>
