@page
@model ComponentPlayground.Pages.Demo.Badge

<div className="flex flex-col items-center gap-2">
    <div className="flex w-full flex-wrap gap-2">
        <sui-badge>Badge</sui-badge>
        <sui-badge variant="Secondary">Secondary</sui-badge>
        <sui-badge variant="Destructive">Destructive</sui-badge>
        <sui-badge variant="Outline">Outline</sui-badge>
    </div>
    <div className="flex w-full flex-wrap gap-2">
        <sui-badge
            variant="Secondary"
            class="bg-blue-500 text-white dark:bg-blue-600"
        >
            <sui-icon name="badge-check"/>
            Verified
        </sui-badge>
        <sui-badge class="h-5 min-w-5 rounded-full px-1 font-mono tabular-nums">
            8
        </sui-badge>
        <sui-badge
            class="h-5 min-w-5 rounded-full px-1 font-mono tabular-nums"
            variant="Destructive"
        >
            99
        </sui-badge>
        <sui-badge
            class="h-5 min-w-5 rounded-full px-1 font-mono tabular-nums"
            variant="Outline"
        >
            20+
        </sui-badge>
    </div>
</div>