@page
@using DuneUI.TagHelpers
@model ComponentPlayground.Pages.Demo.Card

<div class="flex flex-col gap-y-4">
    <dui-card class="w-full max-w-sm">
        <dui-card-header>
            <dui-card-title>Login to your account</dui-card-title>
            <dui-card-description>
                Enter your email below to login to your account
            </dui-card-description>
            <dui-card-action>
                <dui-button variant="ButtonVariant.Link">Sign Up</dui-button>
            </dui-card-action>
        </dui-card-header>
        <dui-card-content>
            <p>Some content goes here...</p>
        </dui-card-content>
        <dui-card-footer class="flex-col gap-2">
            <dui-button type="submit" class="w-full">
                Login
            </dui-button>
            <dui-button variant="ButtonVariant.Outline" class="w-full">
                Login with Google
            </dui-button>
        </dui-card-footer>
    </dui-card>

    <div class="w-full p-6 flex justify-center">
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4 w-full max-w-6xl">
            <dui-card>
                <dui-card-header class="flex flex-row items-center justify-between space-y-0 pb-2">
                    <dui-card-title class="text-sm font-medium">Total Revenue</dui-card-title>
                    <dui-icon name="dollar-sign" class="h-4 w-4 text-muted-foreground"/>
                </dui-card-header>
                <dui-card-content>
                    <div class="text-2xl font-bold">$45,231.89</div>
                    <p class="text-xs text-muted-foreground">
                        +20.1% from last month
                    </p>
                </dui-card-content>
            </dui-card>
            <dui-card>
                <dui-card-header class="flex flex-row items-center justify-between space-y-0 pb-2">
                    <dui-card-title class="text-sm font-medium">Subscriptions</dui-card-title>
                    <dui-icon name="users" class="h-4 w-4 text-muted-foreground"/>
                </dui-card-header>
                <dui-card-content>
                    <div class="text-2xl font-bold">+2,350</div>
                    <p class="text-xs text-muted-foreground">
                        +180.1% from last month
                    </p>
                </dui-card-content>
            </dui-card>
            <dui-card>
                <dui-card-header class="flex flex-row items-center justify-between space-y-0 pb-2">
                    <dui-card-title class="text-sm font-medium">Sales</dui-card-title>
                    <dui-icon name="trending-up" class="h-4 w-4 text-muted-foreground"/>
                </dui-card-header>
                <dui-card-content>
                    <div class="text-2xl font-bold">+12,234</div>
                    <p class="text-xs text-muted-foreground">
                        +19% from last month
                    </p>
                </dui-card-content>
            </dui-card>
            <dui-card>
                <dui-card-header class="flex flex-row items-center justify-between space-y-0 pb-2">
                    <dui-card-title class="text-sm font-medium">Active Now</dui-card-title>
                    <dui-icon name="activity" class="h-4 w-4 text-muted-foreground"/>
                </dui-card-header>
                <dui-card-content>
                    <div class="text-2xl font-bold">+573</div>
                    <p class="text-xs text-muted-foreground">
                        +201 since last hour
                    </p>
                </dui-card-content>
            </dui-card>
        </div>
    </div>
    
    <dui-card class="w-48">
        <dui-card-content class="p-3">
            <div class="aspect-square rounded-md bg-gray-100 mb-2">
                <div class="flex items-center justify-center h-full text-muted-foreground text-xs">
                    Product Image
                </div>
            </div>
            <dui-card-title class="text-sm mb-1">Wireless Headphones</dui-card-title>
            <dui-card-description class="text-xs mb-2 line-clamp-2">
                High-quality wireless headphones
            </dui-card-description>
            <div class="flex items-center space-x-1 mb-2">
                <div class="flex">
                    <dui-icon name="star" class="h-3 w-3 fill-yellow-400 text-yellow-400" />
                    <dui-icon name="star" class="h-3 w-3 fill-yellow-400 text-yellow-400" />
                    <dui-icon name="star" class="h-3 w-3 fill-yellow-400 text-yellow-400" />
                    <dui-icon name="star" class="h-3 w-3 fill-yellow-400 text-yellow-400" />
                    <dui-icon name="star" class="h-3 w-3 text-gray-300" />
                </div>
                <span class="text-xs text-muted-foreground">(4.0)</span>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm font-bold">$199</span>
                <dui-button size="ButtonSize.Small" class="text-xs px-2 py-1 h-7">Add</dui-button>
            </div>
        </dui-card-content>
    </dui-card>
</div>