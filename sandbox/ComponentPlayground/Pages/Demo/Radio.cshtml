@page
@model ComponentPlayground.Pages.Demo.Radio

<sui-container class="py-6 lg:py-8">
    <sui-stack>
        <h2 class="bg-gray-100 text-base font-bold">Unbound radio</h2>
        <div>
            <sui-input type="radio"/>
        </div>
        <h2 class="bg-gray-100 text-base font-bold">Unbound radio with label</h2>
        <div>
            <div class="flex gap-x-3">
                <sui-input type="radio"/>
                <sui-label>This is a label</sui-label>
            </div>
        </div>
        <h2 class="bg-gray-100 text-base font-bold">Bound radio</h2>
        <div>
            <sui-input type="radio" asp-for="Model.Layout" value="default" label="Default"/>
            <sui-input type="radio" asp-for="Model.Layout" value="comfortable" label="Comfortable"/>
            <sui-field orientation="Horizontal">
                <sui-input type="radio" asp-for="Model.Layout" value="compact" label="Compact"/>
                <sui-field-content>
                    <sui-field-label>Compactamente</sui-field-label>
                    <sui-field-description>Compactamente ksjfhksjhdf jshdkfshf</sui-field-description>
                </sui-field-content>
            </sui-field>
        </div>
        <h2 class="bg-gray-100 text-base font-bold">Radio group</h2>
        <div class="w-full max-w-md">
            <sui-field-group>
                <sui-field-set>
                    <sui-field-label for="compute-environment-p8w">
                        Compute Environment
                    </sui-field-label>
                    <sui-field-description>
                        Select the compute environment for your cluster.
                    </sui-field-description>
                    <sui-radio-group>
                        <sui-field orientation="Horizontal">
                            <sui-input asp-for="Model.ComputeEnvironment" type="radio" value="kubernetes" id="compute-environment-kubernetes"/>
                            <sui-field-content>
                                <sui-field-label for="compute-environment-kubernetes">Kubernetes</sui-field-label>
                                <sui-field-description>
                                    Run GPU workloads on a K8s configured cluster.
                                </sui-field-description>
                            </sui-field-content>
                        </sui-field>
                        <sui-field orientation="Horizontal">
                            <sui-input asp-for="Model.ComputeEnvironment" type="radio" value="vm" id="compute-environment-vm"/>
                            <sui-field-content>
                                <sui-field-label for="compute-environment-vm">Virtual Machine</sui-field-label>
                                <sui-field-description>
                                    Access a VM configured cluster to run GPU workloads.
                                </sui-field-description>
                            </sui-field-content>
                        </sui-field>
                    </sui-radio-group>
                </sui-field-set>
            </sui-field-group>
        </div>
        <h2 class="bg-gray-100 text-base font-bold">Radio cards</h2>
        <div class="w-full max-w-md">
            <sui-field-group>
                <sui-field-set>
                    <sui-field-label for="compute-environment-p8w">
                        Compute Environment
                    </sui-field-label>
                    <sui-field-description>
                        Select the compute environment for your cluster.
                    </sui-field-description>
                    <sui-radio-group> 
                        <sui-field-label>
                            <sui-field orientation="Horizontal">
                                <sui-field-content>
                                    <sui-field-title>Kubernetes</sui-field-title>
                                    <sui-field-description>
                                        Run GPU workloads on a K8s configured cluster.
                                    </sui-field-description>
                                </sui-field-content>
                                <sui-input asp-for="Model.ComputeEnvironment" type="radio" value="kubernetes"/>
                            </sui-field>
                        </sui-field-label>
                        <sui-field-label>
                            <sui-field orientation="Horizontal">
                                <sui-field-content>
                                    <sui-field-title>Virtual Machine</sui-field-title>
                                    <sui-field-description>
                                        Access a VM configured cluster to run GPU workloads.
                                    </sui-field-description>
                                </sui-field-content>
                                <sui-input asp-for="Model.ComputeEnvironment" type="radio" value="vm"/>
                            </sui-field>
                        </sui-field-label>
                    </sui-radio-group>
                </sui-field-set>
            </sui-field-group>
        </div>
    </sui-stack>
</sui-container>